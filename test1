// Complete Tab Group Theme - All-in-One Solution
// Drop this into your existing theme system
// Uses your existing SCSS variables from colors.scss

@use 'variables/colors' as colors;

// ============================================================================
// CSS CUSTOM PROPERTIES BRIDGE (for compatibility with Angular Material)
// ============================================================================
:root {
  // Material 3 System Variables (required by Angular Material tabs)
  --mat-sys-primary: #{colors.$primary-color};
  --mat-sys-on-surface: #{colors.$text-primary};
  --mat-sys-on-surface-variant: #{colors.$text-secondary};
  --mat-sys-outline-variant: #{colors.$border-light};
  --mat-sys-surface-1: #{colors.$background-secondary};
  --mat-sys-surface-variant: #{colors.$background-tertiary};
  
  // Custom variables for tab-group component
  --text-disabled: #{colors.$text-disabled};
  --text-primary: #{colors.$text-primary};
  --text-secondary: #{colors.$text-secondary};
  --warning-color: #{colors.$warning-color};
  --success-color: #{colors.$success-color};
  --error-color: #{colors.$error-color};
  --info-color: #{colors.$info-color};
  
  // Material Tab Variables (for active/inactive states and icons)
  --mat-tab-header-label-text-color: #{colors.$text-primary};
  --mat-tab-header-active-label-text-color: #{colors.$primary-color};
  --mat-tab-header-inactive-label-text-color: #{colors.$text-secondary};
  --mat-tab-header-disabled-label-text-color: #{colors.$text-disabled};
  --mat-tab-header-active-focus-indicator-color: #{colors.$primary-color};
  --mat-tab-header-active-ripple-color: #{rgba(colors.$primary-color, 0.1)};
}

// ============================================================================
// SHARED TAB GROUP COMPONENT STYLES
// ============================================================================

// Target both old and new tab-group components
.app-shared-tab-group,
.app-tabs-theme {
  display: flex;
  flex-direction: column;
  min-height: 0;

  // Tab label container
  .tab-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;

    // Disabled tab styles (like sidenav pattern)
    &.disabled-tab {
      opacity: 0.6;
      
      .tab-icon:not(.info-icon) {
        color: colors.$text-disabled;
      }
      
      .info-icon {
        color: colors.$warning-color !important;
        margin-left: auto;
        font-size: 18px;
        width: 18px;
        height: 18px;
        pointer-events: auto; // Keep tooltips working on disabled tabs
      }
    }
  }

  // Tab icons
  .tab-icon {
    font-size: 18px;
    height: 18px;
    width: 18px;
    margin-right: 0.25rem;
    color: colors.$text-primary;
  }

  // Status icons (check, error, loading, etc.)
  .status-icon {
    font-size: 18px;
    height: 18px;
    width: 18px;

    // Color overrides for status icons
    &[color="primary"] {
      color: colors.$primary-color !important;
    }
    &[color="warn"] {
      color: colors.$error-color !important;
    }
    &[color="accent"] {
      color: colors.$info-color !important;
    }
  }

  // Per-tab action buttons
  .per-tab-actions {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-bottom: 1px solid colors.$border-light;
    background: colors.$background-secondary;
  }

  // Loading spinner container
  .spinner-wrap {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    justify-content: center;
    height: 240px;
  }

  // Global action buttons
  .global-actions {
    display: flex;
    gap: 0.5rem;
    justify-content: flex-end;
    padding: 0.5rem 1rem;
    border-top: 1px solid colors.$border-light;
    background: colors.$background-secondary;
  }
}

// ============================================================================
// MATERIAL TABS OVERRIDES (for proper icon colors)
// ============================================================================

mat-tab-group {
  .mat-mdc-tab-header {
    .mat-mdc-tab-list {
      .mat-mdc-tab {
        // Tab icon colors for active/inactive states
        .tab-icon {
          color: colors.$text-secondary;
          transition: color 0.2s ease;
        }
        
        // Active tab icon color
        &.mdc-tab--active .tab-icon {
          color: colors.$primary-color;
        }
        
        // Disabled tab icon color
        &.mat-mdc-tab-disabled .tab-icon {
          color: colors.$text-disabled;
        }
        
        // Hover state
        &:hover:not(.mat-mdc-tab-disabled) .tab-icon {
          color: colors.$primary-color;
        }
        
        // Status icon colors within tabs
        .status-icon {
          &[color="primary"] {
            color: colors.$success-color !important;
          }
          &[color="warn"] {
            color: colors.$error-color !important;
          }
          &[color="accent"] {
            color: colors.$info-color !important;
          }
        }
      }
    }
  }
}

// ============================================================================
// TOOLTIP ENHANCEMENTS
// ============================================================================

// Ensure tooltips work on disabled elements
.mat-mdc-tooltip {
  font-size: 12px;
  max-width: 300px;
}

// Info icon specific styling
.info-icon {
  cursor: help;
  opacity: 0.7;
  
  &:hover {
    opacity: 1;
  }
}

