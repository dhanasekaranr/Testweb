// Disabled overlay effect
.disabled-overlay {
  position: relative;

  &::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(1px);
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  &.disabled::after {
    opacity: 1;
  }
}

// Focus and accessibility
.tab-label:focus-visible {
  outline: 2px solid var(--mat-sys-primary, #3f51b5);
  outline-offset: 2px;
  border-radius: 4px;
}

// Responsive design
@media (max-width: 768px) {
  .tab-label {
    gap: 0.25rem;
  }

  .per-tab-actions,
  .global-actions {
    padding: 0.75rem;
    gap: 0.25rem;
  }

  .tab-icon,
  .status-icon {
    font-size: 16px;
    width: 16px;
    height: 16px;
  }
}

// High contrast mode support
@media (prefers-contrast: high) {
  .status-icon {
    filter: contrast(1.2);
  }
}

// Reduced motion support
@media (prefers-reduced-motion: reduce) {
  .status-icon,
  .progress-bar,
  .disabled-overlay::after,
  .tab-icon {
    transition: none;
  }

  .status-icon.loading {
    animation: none;
  }
}


@use '@angular/material' as mat;
@use '../variables/colors' as colors;

// Define Windows Forms style tab theme
@mixin windows-forms-tabs-theme($theme) {
  $color-config: mat.get-color-config($theme);
  $typography-config: mat.get-typography-config($theme);
  
  .tab-control {
    // Override Material tab styles using CSS custom properties
    --mdc-secondary-navigation-tab-container-height: 32px;
    --mat-tab-header-label-text-color: #333333;
    --mat-tab-header-label-text-font: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    --mat-tab-header-label-text-size: 11px;
    --mat-tab-header-label-text-weight: 400;
    --mat-tab-header-label-text-line-height: 1;
    
    // Active tab colors
    --mat-tab-header-active-label-text-color: #000000;
    --mat-tab-header-active-focus-label-text-color: #000000;
    --mat-tab-header-active-hover-label-text-color: #000000;
    
    // Inactive tab colors
    --mat-tab-header-inactive-label-text-color: #333333;
    --mat-tab-header-inactive-focus-label-text-color: #333333;
    --mat-tab-header-inactive-hover-label-text-color: #333333;
    
    // Disabled tab colors
    --mat-tab-header-disabled-label-text-color: #808080;
    
    // Remove ink bar and ripples
    --mat-tab-header-active-ripple-color: transparent;
    --mat-tab-header-inactive-ripple-color: transparent;
    
    mat-tab-group {
      .mat-mdc-tab-header {
        background: #f0f0f0;
        border-bottom: 1px solid #c0c0c0;
        border-radius: 0;
        
        .mat-mdc-tab-header-pagination {
          display: none;
        }
        
        .mat-mdc-tab-list {
          .mat-mdc-tab {
            background: linear-gradient(to bottom, #f8f8f8 0%, #e8e8e8 100%);
            border: 1px solid #c0c0c0;
            border-bottom: none;
            border-radius: 4px 4px 0 0;
            margin-right: 2px;
            min-width: 120px;
            position: relative;
            
            &:hover {
              background: linear-gradient(to bottom, #ffffff 0%, #f0f0f0 100%);
            }
            
            &.mdc-tab--active {
              background: #ffffff;
              border-bottom: 1px solid #ffffff;
              z-index: 10;
              margin-bottom: -1px;
            }
            
            &.mat-mdc-tab-disabled {
              background: #e8e8e8;
              border-color: #d0d0d0;
              opacity: 1;
            }
            
            .mdc-tab__content {
              padding: 0 16px;
            }
            
            .mdc-tab__text-label {
              text-transform: none;
            }
            
            // Hide ink bar and ripple
            .mdc-tab-indicator,
            .mat-mdc-tab-ripple {
              display: none;
            }
            
            // ðŸ†• NEW: Tab icon colors for shared-tab-group
            .tab-icon {
              color: var(--mat-tab-header-inactive-label-text-color, #333333);
            }
            
            &.mdc-tab--active .tab-icon {
              color: var(--mat-tab-header-active-label-text-color, #000000);
            }
            
            &.mat-mdc-tab-disabled .tab-icon {
              color: var(--mat-tab-header-disabled-label-text-color, #808080);
            }
            
            // Status icon colors
            .status-icon {
              &[color="primary"] {
                color: var(--mat-sys-primary, #{colors.$primary-color}) !important;
              }
              &[color="warn"] {
                color: var(--error-color, #{colors.$error-color}) !important;
              }
              &[color="accent"] {
                color: var(--info-color, #{colors.$info-color}) !important;
              }
            }
          }
        }
      }
      
      .mat-mdc-tab-body-wrapper {
        background: #ffffff;
        border: none;
        padding: 16px;
        min-height: 400px;
      }
    }
  }
}

// Responsive adjustments
@mixin windows-forms-tabs-responsive() {
  @media (max-width: 768px) {
    .tab-control {
      mat-tab-group .mat-mdc-tab-header .mat-mdc-tab-list .mat-mdc-tab {
        min-width: 80px;
        font-size: 10px;
      }
    }
  }
}






// Complete Tab Group Theme - All-in-One Solution
// Drop this into your existing theme system
// Uses your existing SCSS variables from colors.scss

@use 'variables/colors' as colors;

// ============================================================================
// CSS CUSTOM PROPERTIES BRIDGE (for compatibility with Angular Material)
// ============================================================================
:root {
  // Material 3 System Variables (required by Angular Material tabs)
  --mat-sys-primary: #{colors.$primary-color};
  --mat-sys-on-surface: #{colors.$text-primary};
  --mat-sys-on-surface-variant: #{colors.$text-secondary};
  --mat-sys-outline-variant: #{colors.$border-light};
  --mat-sys-surface-1: #{colors.$background-secondary};
  --mat-sys-surface-variant: #{colors.$background-tertiary};
  
  // Custom variables for tab-group component
  --text-disabled: #{colors.$text-disabled};
  --text-primary: #{colors.$text-primary};
  --text-secondary: #{colors.$text-secondary};
  --warning-color: #{colors.$warning-color};
  --success-color: #{colors.$success-color};
  --error-color: #{colors.$error-color};
  --info-color: #{colors.$info-color};
  
  // Material Tab Variables (for active/inactive states and icons)
  --mat-tab-header-label-text-color: #{colors.$text-primary};
  --mat-tab-header-active-label-text-color: #{colors.$primary-color};
  --mat-tab-header-inactive-label-text-color: #{colors.$text-secondary};
  --mat-tab-header-disabled-label-text-color: #{colors.$text-disabled};
  --mat-tab-header-active-focus-indicator-color: #{colors.$primary-color};
  --mat-tab-header-active-ripple-color: #{rgba(colors.$primary-color, 0.1)};
}

// ============================================================================
// SHARED TAB GROUP COMPONENT STYLES
// ============================================================================

// Target both old and new tab-group components
.app-shared-tab-group,
.app-tabs-theme {
  display: flex;
  flex-direction: column;
  min-height: 0;

  // Tab label container
  .tab-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;

    // Disabled tab styles (like sidenav pattern)
    &.disabled-tab {
      opacity: 0.6;
      
      .tab-icon:not(.info-icon) {
        color: colors.$text-disabled;
      }
      
      .info-icon {
        color: colors.$warning-color !important;
        margin-left: auto;
        font-size: 18px;
        width: 18px;
        height: 18px;
        pointer-events: auto; // Keep tooltips working on disabled tabs
      }
    }
  }

  // Tab icons
  .tab-icon {
    font-size: 18px;
    height: 18px;
    width: 18px;
    margin-right: 0.25rem;
    color: colors.$text-primary;
  }

  // Status icons (check, error, loading, etc.)
  .status-icon {
    font-size: 18px;
    height: 18px;
    width: 18px;

    // Color overrides for status icons
    &[color="primary"] {
      color: colors.$primary-color !important;
    }
    &[color="warn"] {
      color: colors.$error-color !important;
    }
    &[color="accent"] {
      color: colors.$info-color !important;
    }
  }

  // Per-tab action buttons
  .per-tab-actions {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-bottom: 1px solid colors.$border-light;
    background: colors.$background-secondary;
  }

  // Loading spinner container
  .spinner-wrap {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    justify-content: center;
    height: 240px;
  }

  // Global action buttons
  .global-actions {
    display: flex;
    gap: 0.5rem;
    justify-content: flex-end;
    padding: 0.5rem 1rem;
    border-top: 1px solid colors.$border-light;
    background: colors.$background-secondary;
  }
}

// ============================================================================
// MATERIAL TABS OVERRIDES (for proper icon colors)
// ============================================================================

mat-tab-group {
  .mat-mdc-tab-header {
    .mat-mdc-tab-list {
      .mat-mdc-tab {
        // Tab icon colors for active/inactive states
        .tab-icon {
          color: colors.$text-secondary;
          transition: color 0.2s ease;
        }
        
        // Active tab icon color
        &.mdc-tab--active .tab-icon {
          color: colors.$primary-color;
        }
        
        // Disabled tab icon color
        &.mat-mdc-tab-disabled .tab-icon {
          color: colors.$text-disabled;
        }
        
        // Hover state
        &:hover:not(.mat-mdc-tab-disabled) .tab-icon {
          color: colors.$primary-color;
        }
        
        // Status icon colors within tabs
        .status-icon {
          &[color="primary"] {
            color: colors.$success-color !important;
          }
          &[color="warn"] {
            color: colors.$error-color !important;
          }
          &[color="accent"] {
            color: colors.$info-color !important;
          }
        }
      }
    }
  }
}

