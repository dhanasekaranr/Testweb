// Enhanced Tab Group Component SCSS - Compatible with existing theme
// Uses your existing color variables with CSS custom properties bridge

:host {
  display: flex;
  flex-direction: column;
  min-height: 0;
  --tab-border-radius: 8px;
  --tab-padding: 0.75rem 1rem;
  --status-icon-size: 18px;
}

// Tab header and progress
.tab-header {
  border-bottom: 1px solid var(--mat-sys-outline-variant, #e0e0e0);
  background: var(--mat-sys-surface-container-low, #fafafa);
}

.progress-container {
  height: 4px;
  background: var(--mat-sys-surface-variant, #f8f9fa);
}

.progress-bar {
  height: 100%;
  background: var(--mat-sys-primary, #3f51b5);
  transition: width 0.3s ease;
  border-radius: 2px;
}

// Tab labels and icons
.tab-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 500;
  user-select: none;

  // Disabled tab styles (consistent with sidenav)
  &.disabled-tab {
    opacity: 0.6;
    
    .tab-icon:not(.info-icon) {
      color: var(--text-disabled, #999999);
    }
    
    span {
      color: var(--text-disabled, #999999);
    }
    
    .info-icon {
      color: var(--warning-color, #ff9800) !important;
      margin-left: auto;
      font-size: var(--status-icon-size);
      width: var(--status-icon-size);
      height: var(--status-icon-size);
      pointer-events: auto; // Keep tooltips working
    }
  }
}

.tab-icon {
  font-size: var(--status-icon-size);
  width: var(--status-icon-size);
  height: var(--status-icon-size);
  color: var(--mat-sys-on-surface, #333333);
  transition: color 0.2s ease;
}

.required-indicator {
  color: var(--error-color, #f44336);
  font-weight: bold;
  margin-left: -0.25rem;
}

// Status icons container and individual icons
.status-icons {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  margin-left: auto;
}

.status-icon {
  font-size: var(--status-icon-size);
  width: var(--status-icon-size);
  height: var(--status-icon-size);
  border-radius: 50%;
  transition: all 0.2s ease;

  &.loading {
    animation: spin 1s linear infinite;
    color: var(--info-color, #2196f3);
  }

  &.valid {
    color: var(--success-color, #4caf50);
  }

  &.invalid {
    color: var(--error-color, #f44336);
  }

  &.dirty {
    color: var(--warning-color, #ff9800);
  }

  &.disabled {
    color: var(--text-disabled, #999999);
    cursor: help;
  }

  &.info-icon {
    cursor: help;
    opacity: 0.8;
    
    &:hover {
      opacity: 1;
    }
  }
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

