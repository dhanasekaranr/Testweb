// new accessible-text-field.component.ts

   //html will have <Mat-input/> hint, error etc.

   @Input() config!: FieldConfig;
   @Input() control!: AbstractControl | null;
   get fc(): FormControl | null {
      return (this.control as FormControl) ?? null;
   }



FormBuilderComponent -- 

  @Output() formCreated = new EventEmitter<FormGroup>();
  form!: FormGroup;

  constructor() {}

  ngOnInit(): void {
    this.form = buildTheForm( based on the config);
    this.formCreated.emit(this.form);
  }

  FormBuilderComponent.html // usage of accessible shared text input

    <cvl-accessible-text-field
      [config]="fieldConfig" // pass field level config 
      [control]="form.get(field.name)"> // form is formgroup created in formbuilder component 
    </cvl-accessible-text-field>
  
  
  
  
ParentComponent - 

	  <cvl-form-builder
		............
		(formCreated)="onFormCreated($event)">
	  </cvl-form-builder>  
  
  
	  form!: FormGroup;

	  onFormCreated(form: FormGroup) {
		this.form = form;
	  }
	  
	  
	  
// if the parent is tab-group component 
// tab-group.component.ts	  

  // map: tabId -> FormGroup // I guess u are already doing something like this ....this is for info of the flow, no need to follow this pattern
  private tabForms = new Map<string, FormGroup>();

  onTabFormCreated(tabId: string, form: FormGroup): void {
    this.tabForms.set(tabId, form);
  }
  
  html//
    for each tab {
      <cvl-form-builder
      [config]="formConfig"
      (formCreated)="onTabFormCreated(tab.id, $event)">
    </cvl-form-builder>
	}
